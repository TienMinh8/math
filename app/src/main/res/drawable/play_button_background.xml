<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shadow -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/>
            <solid android:color="#2E7D32"/> <!-- Màu nền bóng tối -->
        </shape>
    </item>

    <!-- Button với gradient -->
    <item android:top="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/>
            <gradient
                android:angle="00"
                android:startColor="#3ab54a"
                android:centerColor="#86c540"
                android:endColor="#3ab54a"
                android:type="linear"/>
            <stroke android:width="4dp" android:color="#4CAF50"/> <!-- Viền xanh lá nhạt -->
        </shape>
    </item>

    <!-- Hiệu ứng sáng bóng trên cùng -->
    <item android:top="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="25dp"/>
            <gradient
                android:angle="90"
                android:startColor="#66FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear"/>
        </shape>
    </item>

</layer-list>