    <!-- Bo góc -->
    <corners android:radius="20dp" />
    
    <!-- Màu nền -->
    <solid android:color="#808080" />
    
    <!-- Viền -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF" />
    
    <!-- Đổ bóng -->
    <padding
